// import this file as a stylus file here, because this is the only way
// how its styles take precedence over the vuepress theme styles.
@import "variables"
@import "fonts"
@require '~vuepress-plugin-tabs/dist/themes/default.styl'

*,
*::before,
*::after
  box-sizing border-box

::selection
  color var(--docs-selection-text)
  background-color var(--docs-selection-bg)

@media (prefers-reduced-motion reduce)
  *
    -webkit-animation none !important
            animation none !important
    transition none !important

html,
body
  min-height 100vh
  font-family var(--docs-font-family-base)
  font-weight var(--docs-font-weight-body)
  font-size var(--docs-font-size-base)

body
  line-height 1.6
  color var(--docs-body-text)
  background-color var(--docs-body-bg)
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

code
  font-family var(--docs-font-family-monospace)
  border-radius var(--docs-border-radius)
  padding var(--docs-space-xs)
  color var(--docs-code-text)
  background-color var(--docs-code-bg)

pre
  font-family var(--docs-font-family-monospace)
  border-radius var(--docs-border-radius)
  padding var(--docs-space-m)
  color var(--docs-pre-text)
  background-color var(--docs-pre-bg)

pre code
  color var(--docs-white)
  background transparent

a
  color var(--docs-body-link)

a:focus,
a:hover
  color var(--docs-body-link-accent)

.sidebar-mask,
.medium-zoom--opened .medium-zoom-overlay
  background var(--docs-header-bg) !important
  opacity .8 !important
  transition-property opacity
  transition-duration 0.2s

#app
  min-height 100vh

  .theme-container
    min-height 100vh
    max-width 1280px
    display flex
    flex-direction column
    margin-left auto
    margin-right auto
    .wrap
    .wrap-border
      flex 1
    &.no-sidebar
      .wrap
        display flex

  // Max-width, centered layout
  .wrap
    max-width 1280px
    padding-left var(--docs-wrap-space-outer)
    padding-right var(--docs-wrap-space-outer)

  .navbar .wrap
    margin-left auto
    margin-right auto

  .wrap-border
    padding-left var(--docs-wrap-space-inner)
    padding-right var(--docs-wrap-space-inner)
    border-left var(--docs-border-dashed)
    border-right var(--docs-border-dashed)

  // Modifications
  h1, h2, h3, h4, h5, h6, .h1, .h2, .h3, .h4, .h5, .h6
    color var(--docs-body-heading)
    font-weight var(--docs-font-weight-heading)
    border 0

    a
      font-weight inherit
      &.header-anchor
        margin-left -1.2em
        padding-right 0

  .h2
    font-size 1.65rem
    padding-bottom 0.3rem

  .arrow.left
    border-right-color var(--docs-neutral-500)

  .arrow.right
    border-left-color var(--docs-neutral-500)

  .arrow.up
    border-bottom-color var(--docs-neutral-500)

  .arrow.down
    border-top-color var(--docs-neutral-500)

  .theme-default-content:not(.custom),
  .page-nav,
  .page-edit,
  .footer .inner
    max-width 100%
    padding-left var(--docs-space-s)
    padding-right var(--docs-space-s)
    @media (min-width: $MQMobileNarrow)
      padding-left var(--docs-space-m)
      padding-right var(--docs-space-m)
    @media (min-width: $MQMobile)
      padding-left var(--docs-space-l)
      padding-right var(--docs-space-l)

  .theme-default-content:not(.custom)
    padding-top var(--docs-space-l)
    padding-bottom var(--docs-space-l)

  .page-edit
    padding-top 0
    padding-bottom 0

  hr
    border-color var(--docs-body-border-light)

  figure
    margin var(--docs-space-m) 0

  blockquote
    color var(--docs-body-text-muted)
    border-left-color var(--docs-body-border-medium)

  // hide outbound link markers for videos and images
  figure a svg.outbound
    display none

  code
    font-family var(--docs-font-family-monospace)
    border-radius var(--docs-border-radius)
    color var(--docs-code-text)
    background-color var(--docs-code-bg)
    word-break break-word

  pre
    font-family var(--docs-font-family-monospace)
    border-radius var(--docs-border-radius)
    color var(--docs-pre-text)
    background-color var(--docs-pre-bg)
    font-size var(--docs-font-size-s)
    max-width 100%

  pre code
    color var(--docs-white)
    background transparent

  th, td
    border-color var(--docs-body-border-light)

  div[class*="language-"]
    background transparent
    border-radius var(--docs-border-radius)

  .custom-block .custom-block-title
    color inherit

  .custom-block a
    color inherit
    text-decoration underline

  .custom-block.danger
    color var(--docs-danger-text)
    background var(--docs-danger)
    border-color var(--docs-danger-bg-hover)

  .custom-block.warning
    color var(--docs-warning-text)
    background var(--docs-warning)
    border-color var(--docs-warning-bg-hover)

  .custom-block.tip
    color var(--docs-body-text)
    background var(--docs-neutral-10)
    border-color var(--docs-neutral-25)

  .page-edit .edit-link a,
  .page-nav .inner a
    color var(--docs-secondary)

  .page-edit .edit-link a:hover,
  .page-edit .edit-link a:focus,
  .page-nav .inner a:hover,
  .page-nav .inner a:focus
    color var(--docs-secondary-accent)

  .page-nav .inner
    border-top-color var(--docs-body-border-light)

  .pagination > li:not(.active) > a
    background-color transparent
    border-color var(--docs-body-border-medium)

  .pagination > .disabled > span,
  .pagination > .disabled > span:hover,
  .pagination > .disabled > span:focus,
  .pagination > .disabled > a,
  .pagination > .disabled > a:hover,
  .pagination > .disabled > a:focus
    pointer-events none
    color var(--docs-body-text-muted)

  .pagination > li > a,
  .pagination > li > span
    color var(--docs-body-link)

  .pagination > li > a:hover,
  .pagination > li > span:hover,
  .pagination > li > a:focus,
  .pagination > li > span:focus
    color var(--docs-body-link-accent)
    text-decoration none !important

  .pagination > .active > a,
  .pagination > .active > span,
  .pagination > .active > a:hover,
  .pagination > .active > span:hover,
  .pagination > .active > a:focus,
  .pagination > .active > span:focus
    color #fff
    cursor default
    background-color var(--docs-body-border-medium)
    border-color var(--docs-body-border-medium)

  .tabs-component
    margin var(--docs-space-m) 0

  .tabs-component-tabs
    margin-top 0

  .tabs-component-tab
    display inline-block
    color var(--docs-body-text)
    background-color var(--docs-body-bg)
    border-color var(--docs-body-border-medium)
    border none
    font-size inherit
    font-weight inherit

  .tabs-component-tab-a
    padding 0
    margin-right var(--docs-space-m)

  .tabs-component-panels
    background-color var(--docs-body-bg)
    border-color var(--docs-body-border-medium)
    border none
    padding 0

  .tabs-component-tab.is-active
    color var(--docs-body-link-accent)
    transform none

  .ytEmbed
    display block
    position relative
    margin 1rem 0 2rem
    height 0
    overflow hidden
    max-width 100%
    padding-bottom 56.25%
    background-repeat no-repeat
    background-position 50%
    background-size cover
    background-color var(--docs-bg-dark)

  .ytEmbed:before
    background url("data:image/png;base64, ") no-repeat center center
    background-size auto
    background-size 64px 64px
    position absolute
    height 100%
    width 100%
    opacity 0.8
    transition all 0.2s ease-out
    content ''
    cursor pointer

  iframe
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    display none

  iframe[src]
    display block
