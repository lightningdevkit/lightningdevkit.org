:root {
  --docs-font-family-base: 'Manrope', sans-serif;
  --docs-font-family-monospace: 'IBM Plex Mono', monospace;

  --docs-space-xs: 5px;
	--docs-space-s: 10px;
	--docs-space-m: 20px;
	--docs-space-l: 40px;
	--docs-space-xl: 60px;
	--docs-space-xxl: 80px;
	--docs-font-family-base: "Open Sans" , "Helvetica Neue" , Arial , sans-serif;
	--docs-font-family-monospace: SFMono-Regular , Menlo , Monaco , Consolas , "Liberation Mono" , "Courier New" , monospace;
	--docs-font-size-xs: 10px;
	--docs-font-size-s: 12px;
	--docs-font-size-m: 1rem;
	--docs-font-size-l: 18px;
	--docs-font-size-xl: 36px;
	--docs-font-size-xxl: 45px;
	--docs-font-weight-normal: 400;
	--docs-font-weight-semibold: 600;

  --docs-white: #FFF;
  --docs-black: #000;
  --docs-primary: #0F31F7;
  --docs-accent-teal: #76F3CD;
  --docs-accent-yellow: #F7C00F;
  --docs-accent-purple: #711BF7;

  --docs-neutral-100: var(--docs-neutral-light-100);
  --docs-neutral-200: var(--docs-neutral-light-200);
  --docs-neutral-300: var(--docs-neutral-light-300);
  --docs-neutral-400: var(--docs-neutral-light-400);
  --docs-neutral-500: var(--docs-neutral-light-500);
  --docs-neutral-600: var(--docs-neutral-light-600);
  --docs-neutral-700: var(--docs-neutral-light-700);
  --docs-neutral-800: var(--docs-neutral-light-800);
  --docs-neutral-900: var(--docs-neutral-light-900);

  --docs-body-bg: var(--docs-white);
  --docs-body-text: var(--docs-black);
  --docs-body-link: var(--docs-primary);
  --docs-body-link-accent: var(--docs-primary);
  --docs-body-border-light: var(--docs-neutral-200);
  --docs-body-border-medium: var(--docs-neutral-300);

  --docs-header-text: var(--docs-body-text);
  --docs-header-bg: var(--docs-body-bg);
  --docs-header-link: var(--docs-body-link);
  --docs-header-link-accent: var(--docs-body-link-accent);

	--docs-font-weight-body: var(--docs-font-weight-normal);
	--docs-font-weight-heading: var(--docs-font-weight-semibold);

  @media (max-width: $MQMobile) {
    --docs-font-size-base: 16px;
  }
  @media (min-width: $MQMobile+1) {
    --docs-font-size-base: 18px;
  }
}

:root[data-theme="dark"] {
  --docs-body-bg: var(--docs-black);
  --docs-body-text: var(--docs-white);
  --docs-body-link: var(--docs-primary);
  --docs-body-link-accent: var(--docs-primary);
}

@media (prefers-color-scheme: dark) {
  :root:not([data-theme]) {
    --docs-body-bg: var(--docs-black);
    --docs-body-text: var(--docs-white);
    --docs-body-link: var(--docs-primary);
    --docs-body-link-accent: var(--docs-primary);
  }
}
